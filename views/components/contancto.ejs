<div class="contacto">
    <form action="/form-contacto" method="post">
      <h3 class="let" style="color: beige; position: absolute; top:5%">Email</h3>      
      <input id="email"  type="email" name="email" id="email" placeholder="email" />
      <h3 class="let" style="color: beige; position: absolute; top:32%" >Nombre</h3>
      <input id="name" type="text" name="name" id="name" placeholder="nombre" required />
      <h3 class="let" style="color: beige; position: absolute; left: 40.7%; top: -4%;" >Comentario</h3>
     
      <textarea id="comnet"
        required
        name="mensaje"
        id="mensaje"
        cols="30"
        rows="10"
        placeholder="comentario"
      ></textarea>
      <input  type="submit" value="enviar" />
    </form>
  </div>
  
  <script>
  document.getElementById('submit-btn').addEventListener('click', async () => {
    const form = document.getElementById('contacto-form');
    const formData = new FormData(form);
  
    const response = await fetch('/form-contacto', {
      method: 'POST',
      body: formData,
    });
  
    if (response.ok) {
      console.log('Formulario enviado con Ã©xito');
    } else {
      console.error('Error al enviar el formulario');
    }
  });
  </script>